@{
    ViewBag.Title = "Index";
}

@section scripts
{
    <script src="~/Scripts/Views/Login/Index.js"></script>
}

<h2>Autenticação do Usuário</h2>
<form>
    <div class="form-group">
        <label for="txtEmail">Informe seu e-mail:</label>
        <input type="email" name="txtEmail" id="txtEmail" required class="form-control" />
    </div>
    <div class="form-group">
        <label for="txtSenha">Senha de acesso:</label>
        <input type="password" name="txtSenha" id="txtSenha" class="form-control" />
    </div>
    <div class="form-group">
        <span class="text-danger" id="msg"></span>
    </div>
    <div class="form-inline">
        <button type="button" name="btnValidarAcesso" id="btnValidarAcesso" class="btn btn-primary">Validar acesso</button>
    </div>
    <div id="divAlerta" class="alert alert-danger" role="alert" style="display:none"></div>
</form>